<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/video_call_small_button"/>
    <item
        android:bottom="@dimen/videoCall_Active_BottomButton_IconPadding"
        android:left="@dimen/videoCall_Active_BottomButton_IconPadding"
        android:right="@dimen/videoCall_Active_BottomButton_IconPadding"
        android:top="@dimen/videoCall_Active_BottomButton_IconPadding">
        <selector>
            <item
                android:state_checked="false"
                android:state_enabled="true">
                <bitmap android:src="@drawable/ic_calling_cam_close_dark_24"/>
            </item>
            <item
                android:state_checked="true"
                android:state_enabled="true">
                <bitmap android:src="@drawable/ic_calling_cam_close_24"/>
            </item>
            <item android:state_enabled="false">
                <bitmap android:src="@drawable/ic_calling_switch_disable"/>
            </item>
        </selector>
    </item>
</layer-list>
