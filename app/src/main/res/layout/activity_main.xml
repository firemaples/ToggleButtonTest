<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical"
    tools:context="io.github.firemaples.togglebuttontest.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/toggle"
            style="@style/VideoCall.SmallButton"
            android:background="@drawable/bt_video_call_cam_close"/>

        <ToggleButton
            android:id="@+id/toggleChecked"
            style="@style/VideoCall.SmallButton"
            android:background="@drawable/bt_video_call_cam_close"
            android:checked="true"/>

        <ToggleButton
            android:id="@+id/toggleDisabled"
            style="@style/VideoCall.SmallButton"
            android:background="@drawable/bt_video_call_cam_close"
            android:enabled="false"/>

        <ImageButton
            style="@style/VideoCall.SmallButton"
            android:background="@drawable/bt_video_call_hangup"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>


</LinearLayout>
